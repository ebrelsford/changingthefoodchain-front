<header>
    <div id="logo">
        <a href="#" {{action 'reset'}}>{{t "application.header"}}</a>
    </div>
    <nav id="nav">
        {{#link-to 'about'}}{{t "application.nav.about"}}{{/link-to}}
        {{#link-to 'news'}}{{t "application.nav.news"}}{{/link-to}}
        {{#link-to 'contact'}}{{t "application.nav.contact"}}{{/link-to}}
    </nav>
    <div id="tagline">
        <div>
            {{t "application.tagline"}}
        </div>
        <div class="languages">
            {{#each languages}}
            <a href="#" {{action 'setLocale' code}} {{bind-attr class="active"}}>{{label}}</a>
            {{/each}}
        </div>
    </div>
    <div id="search">
        {{#if english}}
            {{type-ahead remote=searchRemote name="displayName" action="search" selection=selectedOrganization value=searchText placeholder="Search by name, city, state"}}
        {{/if}}
        {{#if spanish}}
            {{type-ahead remote=searchRemote name="displayName" action="search" selection=selectedOrganization value=searchText placeholder="Buscar por nombre, ciudad, estado"}}
        {{/if}}
        {{#if searchError}}
        <div class="search-error">
            {{t "application.search.error"}}
        </div>
        {{/if}}
    </div>

    <a href="#" id="list-button" {{action 'toggleList'}}></a>
</header>

<div id="map">
    <a href="http://mapbox.com/about/maps" class='mapbox-maplogo' target="_blank">MapBox</a>
</div>

<div id="project-authors">
    {{t "application.project_of"}}
    <a href="http://foodchainworkers.org/" target="_blank">Food Chain Workers Alliance</a> &amp;
    <a href="http://thehandthatfeedsfilm.com/" target="_blank">The Hand That Feeds</a>
    {{t "application.with_support"}}
    <a href="https://britdoc.org/bertha-connect/" target="_blank">Bertha BRITDOC Connect Fund</a>
</div>

<div id="filters" class="full-height">
    <a href="#" {{action 'clearFilters'}} class="filters-clear">{{t "application.filters.clear"}}</a>
    <h2>{{t "application.filters.header"}}</h2>
    <section class="filters-type">
        {{#link-to 'help-organization-types' class="pull-right help-button"}}?{{/link-to}}
        <h3>{{t "application.filters.organization_type"}}</h3>
        {{view App.OrganizationTypeView content=types}}
    </section>
    <section class="filters-sector">
        {{#link-to 'help-industry-types' class="pull-right help-button"}}?{{/link-to}}
        <h3>{{t "application.filters.industry_type"}}</h3>
        {{view App.SectorView content=sectors}}
    </section>
    <section class="filters-news-category">
        {{#link-to 'help-voices' class="pull-right help-button"}}?{{/link-to}}
        <h3>{{t "application.filters.news"}}</h3>
        {{view App.NewsCategoryView content=newsCategories}}
    </section>
</div>

{{#link-to 'organizations.add' class="map-ui-button add-organization-button"}}
    <div class="map-ui-button-icon add-organization-button-icon"></div>
    {{t "application.buttons.add_org"}}
{{/link-to}}

<a id="share-button" class="map-ui-button" {{action 'openShare'}}>
    <div class="map-ui-button-icon add-organization-button-icon"></div>
    {{t "application.buttons.share"}}
</a>

<div id="popup" class="full-height">
    {{outlet}}
</div>

<div id="page" class="full-height full-width">
    {{outlet page}}
</div>

<div id="help" class="full-height full-width">
    {{outlet help}}
</div>

{{outlet modal}}

<header>
    <div id="logo">{{#link-to 'index'}}{{t "application.title"}}{{/link-to}}</div>
    <nav id="nav">
        {{#link-to 'about'}}{{t "application.nav.about"}}{{/link-to}}
        {{#link-to 'contact'}}{{t "application.nav.contact"}}{{/link-to}}
        {{#link-to 'news'}}{{t "application.nav.news"}}{{/link-to}}
    </nav>
    <div id="tagline">
        <div>
            {{t "application.tagline"}}
        </div>
        <div>
            <a href="#" {{action 'setLocale' 'en'}}>english</a>
            <a href="#" {{action 'setLocale' 'es'}}>espa√±ol</a>
        </div>
    </div>
    <div id="search">
        {{type-ahead data=organizations name="name" action="search" selection=selectedOrganization value=searchText placeholder="Search by name, city, state"}}
    </div>
    <a id="list-button" href="#" {{action 'openOrganizationList'}}>list</a>
</header>

<div id="map"></div>

<div id="filters" class="full-height">
    <h2>filters</h2>
    <section class="filters-type">
        <a class="pull-right help-button" href="#" {{action 'openHelpOrganizationTypes'}}>?</a>
        <h3>{{t "application.filters.organization_type"}}</h3>
        {{view App.OrganizationTypeView content=types}}
    </section>
    <section class="filters-sector">
        <h3>{{t "application.filters.industry_type"}}</h3>
        {{view App.SectorView content=sectors}}
    </section>
</div>

<a id="add-organization-button" class="map-ui-button" {{action 'openAddOrganization'}}>add org</a>
<a id="share-button" class="map-ui-button" {{action 'openShare'}}>share</a>

<div id="popup" class="full-height">
    {{outlet popup}}
</div>

<div id="page" class="full-height full-width">
    {{outlet page}}
</div>

<div id="help" class="full-height full-width">
    {{outlet help}}
</div>

{{outlet modal}}

<div class="row">
    <div class="page-sections">
        <a href="#" {{action 'clear'}} class="news-category-clear">{{t "news.categories.clear"}}</a>
        <h2 class="news-category-header">{{t "news.categories.header"}}</h2>
        <ul class="news-category-list">
            <li class="news-category-list-item" {{action 'pickFeatured'}} {{bind-attr class="featured:active"}}>{{t "news.categories.featured"}}</li>
        </ul>
        {{view App.NewsCategoryView content=categories}}
    </div>
    <div class="page-content news-entry-list">
        <div class="close" {{action 'close'}}>&times;</div>
        <h1 class="news-header">{{t "news.header"}}</h1>
        {{#each content}}
        <div class="news-entry">
            <div class="news-entry-cover">
                {{{cover}}}
            </div>
            <div class="news-entry-content">
                <h2 class="news-entry-title">{{title}}</h2>
                <div class="news-entry-meta">
                    <div class="news-entry-meta-publication-date">{{published_on_short}}</div>
                </div>
                <div class="news-entry-preview">
                    {{{preview}}}
                </div>
                <div class="news-entry-link">
                    {{#if link}}
                    <a {{bind-attr href=link}} target="_blank">
                        {{#if read_more_at}}
                        {{t "news.read_more_at"}} {{read_more_at}}
                        {{else}}
                        {{t "news.read_more"}}
                        {{/if}}
                    </a>
                    {{else}}
                    <a href="#" {{action 'openEntry' id}}>{{t "news.read_more"}}</a>
                    {{/if}}
                </div>
            </div>
        </div>
        {{else}}
        {{t "news.empty"}}
        {{/each}}
    </div>
</div>

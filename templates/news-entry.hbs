<div class="news-row">
    <div class="page-sections">
        <a href="#" {{action 'clear'}} class="news-category-clear">{{t "news.categories.clear"}}</a>
        <h2 class="news-category-header">{{t "news.categories.header"}}</h2>
        <ul class="news-category-list">
            <li class="news-category-list-item" {{action 'pickFeatured'}} {{bind-attr class="featured:active"}}>
                <div class="section-indicator"></div>
                <div class="section-label">
                    {{t "news.categories.featured"}}
                </div>
                <div class="clearfix"></div>
            </li>
        </ul>
        {{view App.NewsCategoryView content=controllers.news.categories}}
    </div>
    <div class="page-content">
        <h1 class="news-header fixed-header">
            {{#link-to 'news'}}{{t "news.header"}}{{/link-to}}
            <div class="close" {{action 'close'}}>&times;</div>
        </h1>
        <div class="news-entry news-entry-detail fixed-header-spacer">
            {{#with content}}
            <h2 class="news-entry-title">
                {{#if link}}
                <a {{bind-attr href=link}} target="_blank">{{title}}</a>
                {{else}}
                {{title}}
                {{/if}}
            </h2>
            <div class="news-entry-meta">
                <div class="news-entry-meta-publication-date">{{published_on_long}}</div>
            </div>
            <div class="news-entry-cover">
                {{{cover}}}
            </div>
            <div class="news-entry-content">
                <div class="news-entry-preview">
                    {{{main}}}
                    <div class="clearfix"></div>
                </div>
                {{#if link}}
                <div class="news-entry-link">
                    <a {{bind-attr href=link}} target="_blank">
                        {{#if read_more_at}}
                        {{t "news.read_more_at"}} {{read_more_at}}
                        {{else}}
                        {{t "news.read_more"}}
                        {{/if}}
                    </a>
                </div>
                {{/if}}
            </div>
            {{/with}}
        </div>
    </div>
</div>

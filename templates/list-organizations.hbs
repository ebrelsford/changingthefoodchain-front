<div class="close" {{action 'close'}}>&times;</div>
<ul class="organizations-list">
    {{#each model}}
    <li class="organizations-list-item" {{action 'openOrganization' id}}>
        <div class="organizations-list-item-name">{{name}}</div>
        <div class="organizations-list-item-city">{{city}}</div>
        <div class="organizations-list-item-state">{{state_province}}</div>
        <div class="organizations-list-item-types">
            {{#each types}}
            {{name}}
            {{/each}}
        </div>
        <div class="organizations-list-item-sectors">
            {{#each sectors}}
            {{name}}
            {{/each}}
        </div>
    </li>
    {{/each}}
</ul>
